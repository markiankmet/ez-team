        <Window x:Class="FullApp.View.YourWindow"        
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:gif="https://www.galvanizeaction.org/wp-content/uploads/2022/06/Wow-gif.gif"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FullApp.View"
        mc:Ignorable="d"
        Title="YourWindow" Height="450" Width="800">
        
    <Grid>
        <Border CornerRadius="0,10,10,0"
                    Grid.Column="1">
            <Border.Background>
                <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                    <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0"/>
                    <GradientStop Color="{StaticResource primaryBackColor2}" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            
        </Border>
        <StackPanel Orientation="Horizontal"
            Margin="10 0 0 10" Height="120">
            <Image x:Name="gifImage" />
            <Button Content="Level 1"/>
        </StackPanel>
    </Grid>
</Window>
